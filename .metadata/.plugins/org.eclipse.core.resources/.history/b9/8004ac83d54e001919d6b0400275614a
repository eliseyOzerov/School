#include "Calendar.h"
#include "Event.h"
#include <iostream>
#include <limits>

using namespace std;

bool isDateValid(int year, int month, int day){
	if(year>=900 && year<3000 && month>=1 && month<=12 && day>=1 && day<=7){
		return true;
	} else {
		std::cout << "Values invalid";
		return false;
	}
}

bool isTimeValid(int hour, int minute, int second){
	if(hour>=0 && hour<=23 && minute>=0 && minute<=59 && second>=0 && second<=59){
		return true;
	} else {
		std::cout << "Values invalid";
		return false;
	}
}

void createEvent(){
	string event_name;
	string event_location;
	int year, month, day;
	bool dateCorrect = false;
	int hour, minute, second;
	bool timeCorrect = false;
	cout << "Enter name of event: ";
	cin >> event_name;
	cout << "Enter location of event: ";
	cin >> event_location;
	while(!dateCorrect){
		cout << "Enter start time of event[y m d]: ";
		cin << year;
		cin << month;
		cin << day;
		if(!isDateValid(year, month, day)){
			cout << "Values invalid.";
			cin.clear();
			cin.ignore(numeric_limits<streamsize>::max(), '\n');
		}
	}
}

