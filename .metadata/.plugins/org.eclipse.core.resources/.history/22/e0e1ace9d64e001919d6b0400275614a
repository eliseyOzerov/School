#include "Calendar.h"
#include "Event.h"
#include <iostream>
#include <limits>

using namespace std;

bool isDateValid(int year, int month, int day){
	if(year>=900 && year<3000 && month>=1 && month<=12 && day>=1 && day<=7){
		return true;
	} else {
		std::cout << "Values invalid";
		return false;
	}
}

bool isTimeValid(int hour, int minute, int second){
	if(hour>=0 && hour<=23 && minute>=0 && minute<=59 && second>=0 && second<=59){
		return true;
	} else {
		std::cout << "Values invalid";
		return false;
	}
}

int main(){

	Calendar* cal = new Calendar("Elisey");

	cal->addEvent(new Event("Programiranje1", "F-104",
			*new DateTime(*new Date(25, 3, 2019), *new Time(7, 0, 0)),
			*new DateTime(*new Date(25, 3, 2019), *new Time(10, 0, 0))));

	cout << cal->toString();
	return 0;
}


